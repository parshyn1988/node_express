extends layouts/main-layout

block content
    .w3-content.w3-padding(style='max-width:1564px')
        #contact.w3-container.w3-padding-32
            h3.w3-border-bottom.w3-border-light-grey.w3-padding-16 Contact
            p Lets get in touch and talk about your next project.
            form(action='/' target='_blank')
                input.w3-input.w3-border(type='text' placeholder='Name' required='' name='Name')
                input.w3-input.w3-section.w3-border(type='text' placeholder='Email' required='' name='Email')
                input.w3-input.w3-section.w3-border(type='text' placeholder='Subject' required='' name='Subject')
                input.w3-input.w3-section.w3-border(type='text' placeholder='Comment' required='' name='Comment')
                button.w3-button.w3-black.w3-section(type='submit')
                    i.fa.fa-paper-plane
                    |  SEND MESSAGE
        .w3-container
            img.w3-image(src='/images/map.jpg' style='width:100%')
